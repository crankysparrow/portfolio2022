<div class="wrapper home">
	<div class="title-wrap">
		<h1 class="home-h1">hi, i'm michelle</h1>

		<div class="description callout">web developer</div>
	</div>

	<div class="content">
		<h2>recent posts</h2>

		<div class='post-list'>
			{%- for post in collections.post %}
			<div class='post-card'>
				<div class='date'>{{ post.data.page.date }} </div>
				<a href="{{ post.url | url }}">{{ post.data.title }}</a>
				{# {% if post.data.img %}
					<img src="{{post.data.img | url }}" />
				{% endif %} #}
				<div class='excerpt'>{{ post.data.excerpt }}</div>

				{# <pre>
					{{ post | console }}
				</pre> #}
			</div>
			{%- endfor %}
		</div>
	</div>

</div>
