<div class='post-list-fw'>
	<div class='post-list-inner'>
		{% for post in currentCollection | default(collections.post) %}
			<div class='post-card post-card-fw'>
				<div class='post-info'>
					<a class='post-title reset h4' href="{{ post.url | url }}">
						{{ post.data.title }}
					</a>
					<div class='excerpt'>{{ post.data.excerpt }}</div>
					<div class='tags-list'>
						{% for tag in post.data.tags | filterTags %}
							{% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
							<a class='tag reset caps' href="{{ tagUrl | url }}">#{{ tag }}</a>
						{% endfor %}
					</div>

				</div>
			</div>
		{% endfor %}
	</div>
</div>